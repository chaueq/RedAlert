{
	"manifest_version": 2,
	"name": "UGuard",
	"version": "0.2.0",

	"applications": {
		"gecko": {
			"id": "UGuard@chaueq"
		}
	},

	"description": "Anti-phishing browser extension by Micha≈Ç Maciaszek",

	"permissions": [
		"activeTab",
		"tabs",
		"storage",
		"unlimitedStorage",
		"webRequest",
		"webRequestBlocking",
    "<all_urls>"
	],

	"background": {
		"scripts": [
			"background/init.js",
			"data/whitelist.js",
			"data/greylist.js",
			"lib.js",
			"background/updateBlacklist.js",
			"background/actions.js",
			"background/assessRequest.js"
		]
	},

	"browser_action": {
		"default_icon": "images/icon.png",
		"default_title": "UGuard",
		"default_popup": "popup/index.html"
	}
}
